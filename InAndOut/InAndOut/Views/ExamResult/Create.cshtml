@model InAndOut.Models.ExamResult

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Exam</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="StudentName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="ExamName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="ExamType"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Duration"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Marks"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="StudentName" class="form-control" />
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="ExamName" class="form-control" />
                        <span asp-validation-for="ExamName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="ExamType" class="form-control" />
                        <span asp-validation-for="ExamType" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Marks" class="form-control" />
                        <span asp-validation-for="Marks" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" 
                                   class="btn btn-outline-info w-75"
                                   onclick="return confirm('Are you sure you want to Save the record')"
                                   value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{ <partial name="_ValidationScriptsPartial" />}
}