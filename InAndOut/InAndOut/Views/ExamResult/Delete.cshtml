@model InAndOut.Models.ExamResult

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Exam</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="StudentName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="ExamName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="ExamType"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Duration"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Marks"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="StudentName" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="ExamName" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="ExamType" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Duration" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Marks" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" 
                                   class="btn btn-outline-danger w-75"
                                   onclick="return confirm('Are you sure you want to Delete the record')"
                                   value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}