@model InAndOut.Models.Employee

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Employee</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Gender"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Designation"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="PhoneNo"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Address"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Email" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Gender" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Designation" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="PhoneNo" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Address" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" 
                                   class="btn btn-outline-danger w-75"
                                   onclick="return confirm('Are you sure you want to Delete the record')"
                                   value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}